<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Message:</strong>
  <%= @post.message %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
<%= link_to 'Upload Files', new_post_file_upload_path(@post) %>

<h5>Files</h5>

<ul>
  <% @post.files.each do |file| %>
    <li>
      <%= link_to url_for(file) do %>
        <%= image_tag url_for(file), size: "100x100" %>
      <% end %> 
      <%= link_to '<i class="fa fa-trash"></i>'.html_safe, post_file_upload_path(@post, file), method: :delete, data: { confirm: "Tem certeza?" } %>
    </li>
    <% end %>
</ul>

