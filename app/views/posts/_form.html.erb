<%= form_with(model: post, local: true, html: { class: 'ui form' }) do |form| %>
  <%= render partial: 'layouts/errors_messages', locals: { object: post } %>

  <div class="five fields">
    <div class="required field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :message %>
      <%= form.text_field :message %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit nil, class: 'ui primary button' %>
    <%= link_to t('helpers.links.back'), posts_path, class: 'ui button right floated' %>
  </div>
<% end %>
