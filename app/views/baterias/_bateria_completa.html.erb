<table class="ui blue very compact celled striped structured table">
  <thead>
  <tr>
    <th colspan="11" class="center aligned blue inverted"><%= bateria.campeonato_detalhe.detalhes %> - <%= bateria.tipo_bateria.descricao %> - Ordem: <%= bateria.numero %></th>
  </tr>
  <tr>
    <th rowspan="2">Nº</th>
    <th rowspan="2">Atleta/Placa</th>
    <th rowspan="2">UF</th>
    <th colspan="3" class="center aligned">Baterias</th>
    <th colspan="3" class="center aligned">Classificação</th>
    <th rowspan="2">Pontos</th>
    <th rowspan="2">Resultado Final</th>
  </tr>
  <tr>
    <th>1ª</th>
    <th>2ª</th>
    <th>3ª</th>
    <th>1ª</th>
    <th>2ª</th>
    <th>3ª</th>
  </tr>
  </thead>
  <tbody>
  <% bateria&.bateria_detalhes&.includes(inscricao: :atleta).each_with_index do |d, i| %>
    <tr id="list-atleta-<%= i %>">
      <td ><%= i+1 %></td>
      <td ><%= d.inscricao.nome_placa %></td>
      <td ><%= d.inscricao.atleta.uf %></td>
      <td ><%= d.raia_1 %></td>
      <td ><%= d.raia_2 %></td>
      <td ><%= d.raia_3 %></td>
      <td><div class="one wide field"><%= select_tag 'resultado_1', options_for_select(raias_1, d.resultado_1), prompt: "--", class: 'ui dropdown', data: { method: :post, remote: true, url: set_resultado_path(bateria_detalhe_id: d, inscrito_id: d.inscricao, row: i) } %></div></td>
      <td><div class="one wide field"><%= select_tag 'resultado_2', options_for_select(raias_1, d.resultado_2), prompt: "--", class: 'ui dropdown', data: { method: :post, remote: true, url: set_resultado_path(bateria_detalhe_id: d, inscrito_id: d.inscricao, row: i) } %></div></td>
      <td><div class="one wide field"><%= select_tag 'resultado_3', options_for_select(raias_1, d.resultado_3), prompt: "--", class: 'ui dropdown', data: { method: :post, remote: true, url: set_resultado_path(bateria_detalhe_id: d, inscrito_id: d.inscricao, row: i) } %></div></td>
      <td><%= d.pontos %></td>
      <td></td>

    </tr>
  <% end %>
  </tbody>
</table>