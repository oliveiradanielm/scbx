<%= link_to t('helpers.links.new'), new_tipo_categoria_path, class: 'ui right floated mini primary button' %>
<h1>Tipo Categorias</h1>

<table class="ui striped table">
  <thead>
    <tr>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipo_categorias.each do |tipo_categoria| %>
      <tr>
        <td><%= tipo_categoria.descricao %></td>
        <td><%= link_to 'Show', tipo_categoria %></td>
        <td><%= link_to 'Edit', edit_tipo_categoria_path(tipo_categoria) %></td>
        <td><%= link_to 'Destroy', tipo_categoria, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

