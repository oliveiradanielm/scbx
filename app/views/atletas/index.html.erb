<%= link_to t('helpers.links.new'), new_atleta_path, class: 'ui right floated mini primary button' %>
<h1>Atletas</h1>

<table class="ui striped table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Nacionalidade</th>
      <th>Naturalidade</th>
      <th>Data nascimento</th>
      <th>Sexo</th>
      <th>Cpf</th>
      <th>Rg</th>
      <th>Email</th>
      <th>Passaporte</th>
      <th>Validade passaporte</th>
      <th>Tipo sanguineo</th>
      <th>Licenca cbc</th>
      <th>Codigo uci</th>
      <th>Nome mae</th>
      <th>Nome pai</th>
      <th>Logradouro</th>
      <th>Numero</th>
      <th>Complemento</th>
      <th>Bairro</th>
      <th>Cep</th>
      <th>Cidade</th>
      <th>Uf</th>
      <th>Telefone residencial</th>
      <th>Telefone celular</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atletas.each do |atleta| %>
      <tr>
        <td><%= atleta.nome %></td>
        <td><%= atleta.nacionalidade %></td>
        <td><%= atleta.naturalidade %></td>
        <td><%= atleta.data_nascimento %></td>
        <td><%= atleta.sexo %></td>
        <td><%= atleta.cpf %></td>
        <td><%= atleta.rg %></td>
        <td><%= atleta.email %></td>
        <td><%= atleta.passaporte %></td>
        <td><%= atleta.validade_passaporte %></td>
        <td><%= atleta.tipo_sanguineo_id %></td>
        <td><%= atleta.licenca_cbc %></td>
        <td><%= atleta.codigo_uci %></td>
        <td><%= atleta.nome_mae %></td>
        <td><%= atleta.nome_pai %></td>
        <td><%= atleta.logradouro %></td>
        <td><%= atleta.numero %></td>
        <td><%= atleta.complemento %></td>
        <td><%= atleta.bairro %></td>
        <td><%= atleta.cep %></td>
        <td><%= atleta.cidade %></td>
        <td><%= atleta.uf %></td>
        <td><%= atleta.telefone_residencial %></td>
        <td><%= atleta.telefone_celular %></td>
        <td><%= link_to 'Show', atleta %></td>
        <td><%= link_to 'Edit', edit_atleta_path(atleta) %></td>
        <td><%= link_to 'Destroy', atleta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

