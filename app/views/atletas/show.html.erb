<div class="ui mini form black segment">
<h4 class="ui dividing header">Dados do Atleta</h4>
  <div class="three fields">
    <div class="eight wide field">
      <%= label_tag :nome %>
      <%= text_field_tag :nome, @atleta.nome, disabled: '', tabindex: '-1'  %>
    </div>

    <div class="four wide field">
      <%= label_tag :data_nascimento %>
      <div class="ui calendar datepicker-year">
        <div class="ui input left icon">
          <i class="calendar alternate outline icon"></i>
          <%= text_field_tag :data_nascimento, @atleta.data_nascimento.strftime('%d/%m/%Y'), disabled: '', tabindex: '-1'  %>
        </div>
      </div>
    </div>

    <div class="four wide field">
      <%= label_tag :email %>
      <%= text_field_tag :email, @atleta.email, disabled: '', tabindex: '-1'  %>
    </div>
  </div>

  <div class="two fields">
