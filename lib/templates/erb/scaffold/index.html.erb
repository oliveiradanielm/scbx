<%%= link_to t('helpers.links.new'), new_<%= singular_route_name %>_path, class: 'ui right floated mini primary button' %>
<h1><%%= <%= singular_route_name.camelcase %>.model_name.human.pluralize %></h1>

<table class="ui striped table">
  <thead>
    <tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
      <th><%%= <%= singular_table_name.camelcase %>.human_attribute_name(:<%= attribute.name %>) %></th>
<% end -%>
      <th><%%= t('helpers.links.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
        <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>

        <td>
          <div class="ui icon buttons">
            <%%= link_to(content_tag(:i, nil, class: 'info circle icon'), <%= model_resource_name %>, class: 'ui button') %>
            <%%= link_to content_tag(:i, nil, class: 'edit outline icon'), edit_<%= singular_route_name %>_path(<%= singular_table_name %>), class: 'ui button' %>
            <%%= link_to content_tag(:i, nil, class: 'trash alternate outline icon'), <%= model_resource_name %>, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, class: 'ui button' %>
          </div>
        </td>
      </tr>
    <%% end %>
  </tbody>
</table>

<br>

